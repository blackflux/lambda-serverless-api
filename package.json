{
  "name": "lambda-serverless-api",
  "description": "Basic Api Wrapper for Serverless Framework.",
  "main": "lib/api.js",
  "keywords": [
    "serverless",
    "lambda",
    "api",
    "api gateway",
    "rate limiter",
    "monitoring",
    "logging"
  ],
  "author": "Lukas Siemon",
  "devDependencies": {
    "app-root-path": "2.0.1",
    "chai": "4.1.2",
    "coveralls": "3.0.0",
    "lambda-tdd": "1.11.15",
    "js-gardener": "1.15.0",
    "nyc": "11.6.0",
    "semantic-release": "15.1.5"
  },
  "version": "0.0.0-development",
  "scripts": {
    "test": "node gardener && nyc mocha --recursive",
    "coveralls": "node ./node_modules/coveralls/bin/coveralls.js < ./coverage/lcov.info",
    "semantic-release": "semantic-release"
  },
  "homepage": "https://github.com/simlu/lambda-serverless-api#readme",
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/simlu/lambda-serverless-api/blob/master/LICENSE"
    }
  ],
  "engines": {
    "node": ">= 6.10.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/simlu/lambda-serverless-api.git"
  },
  "bugs": {
    "url": "https://github.com/simlu/lambda-serverless-api/issues"
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "lambda-rate-limiter": "2.4.3",
    "lambda-rollbar": "1.9.1",
    "lodash.defaultsdeep": "4.6.0",
    "lodash.get": "4.4.2",
    "yaml-boost": "1.3.2",
    "lodash.set": "4.3.2",
    "lodash.xor": "4.5.0",
    "js-yaml": "3.11.0",
    "swagger-parser": "4.0.2"
  },
  "peerDependencies": {},
  "nyc": {
    "tempDirectory": "./coverage/.nyc_output",
    "report-dir": "./coverage",
    "check-coverage": true,
    "per-file": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "**/*.js"
    ],
    "exclude": [
      "gardener.js",
      "node_modules/*",
      "coverage/*",
      "flow-typed/*"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "babel-register"
    ],
    "extension": [],
    "cache": true,
    "all": true,
    "babel": true
  }
}
